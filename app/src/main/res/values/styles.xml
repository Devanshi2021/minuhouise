        <item name="fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="detail_textview_style">
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textColor">@color/color_detail_textview_login_signup</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="detail_edittext_style">
