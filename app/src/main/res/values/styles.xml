    <style name="edit_profile_text_style">
        <item name="android:textSize">@dimen/_15ssp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="MatchSpinnerStyle" parent="android:style/Widget.ListView.DropDown">
        <item name="android:divider">#5200aa</item>
<!--        <item name="android:dividerHeight">@dimen/_1sdp</item>-->
    </style>

    <style name="MatchSpinnerTheme" parent="AppTheme">
        <item name="android:dropDownListViewStyle">@style/MatchSpinnerStyle</item>
    </style>

    <style name="edit_profile_text_styles" parent="@style/Widget.AppCompat.Spinner.Underlined">
        <item name="android:textSize">@dimen/_15ssp</item>
        <item name="android:textColor">#5200aa</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="timer_style">
        <item name="android:textSize">@dimen/_20ssp</item>
        <item name="android:textColor">@color/color_game_recycle_heading_text</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="winner_table_row_style">
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/montserrat_regular</item>
    </style>

    <!-- Theme.AppCompat.Light is not a dialog theme -->
    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/color_detail_textview_login_signup</item>
    </style>

    <style name="add_game_text_style">
        <item name="android:textSize">@dimen/_20ssp</item>
        <item name="android:textColor">#5200aa</item>
        <item name="android:textStyle">bold</item>
